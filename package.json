{
  "name": "hog-scaffold",
  "version": "1.0.0",
  "description": "Theme scaffold for HoG",
  "main": "index.js",
  "author": "",
  "scripts": {
    "start": "npm install && npm run build",
    "build": "NODE_ENV=production webpack --config config/webpack.prod.js",
    "dev": "NODE_ENV=development webpack --config config/webpack.dev.js",
    "watch": "NODE_ENV=development webpack --watch --config config/webpack.dev.js",
    "build-release": "npm install && composer install --no-dev -o && npm run build",
    "lint-release": "npm install && composer install && npm run lint",
    "lint-css": "stylelint assets/css",
    "lint-js": "eslint assets/js",
    "lint-php": "composer run lint",
    "format-js": "eslint --fix assets/js",
    "lint": "npm run lint-css && npm run lint-js && npm run lint-php",
    "format": "npm run format-js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint"
    ],
    "*.js": [
      "eslint"
    ],
    "*.php": [
      "./vendor/bin/phpcs --extensions=php --warning-severity=8 -s"
    ]
  },
  "license": "ISC",
  "devDependencies": {
    "@10up/eslint-config": "^2.3.0",
    "@10up/stylelint-config": "^1.0.11",
    "@babel/core": "^7.12.13",
    "@babel/eslint-parser": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-react": "^7.12.13",
    "@babel/register": "^7.12.13",
    "@wordpress/babel-preset-default": "^5.0.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "browser-sync-webpack-plugin": "^2.3.0",
    "browserslist": "^4.16.3",
    "caniuse-db": "^1.0.30001185",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "core-js": "^3.8.3",
    "css-loader": "^5.0.2",
    "cssnano": "^4.1.10",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^31.6.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.3.6",
    "postcss": "^8.2.5",
    "postcss-editor-styles": "^0.3.0",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^5.0.0",
    "postcss-nested": "^5.0.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.9.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-webpack-plugin": "^2.1.1",
    "terser": "^5.5.1",
    "terser-webpack-plugin": "^5.1.1",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-fix-style-only-entries": "^0.6.1",
    "webpack-merge": "^5.7.3",
    "webpackbar": "^4.0.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
